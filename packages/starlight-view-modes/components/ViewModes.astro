---
import config from 'virtual:starlight-view-modes-config';
import type { StarlightViewModesConfig } from '../libs/config';

function shouldShowInTOC(config: StarlightViewModesConfig): { showInTOC: boolean; showZenModeInTOC: boolean } {

  const showZenModeInTOC = config.zenModeSettings.enabled && config.zenModeSettings.switchVisibility.location.includes('tableOfContents');
  // const showPresentationModeInTOC = config.presentationModeSettings.enabled && config.presentationModeSettings.switchVisibility.location.includes('tableOfContents');
  const showInTOC = showZenModeInTOC;
  // const showInTOC = showZenModeInTOC && showPresentationModeInTOC;

  return { showInTOC, showZenModeInTOC };
}

const { showInTOC, showZenModeInTOC } = shouldShowInTOC(config);

const currentPathname = Astro.url.pathname;
const zenModePath = `/zen-mode${currentPathname}`;
