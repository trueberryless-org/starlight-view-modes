---
import "reveal.js/dist/reset.css";
import "reveal.js/dist/reveal.css";
import "reveal.js/dist/theme/black.css";
import "reveal.js/plugin/highlight/monokai.css";

import type { CollectionEntry } from "astro:content";
import PresentationModeRenderer from "./PresentationModeRenderer.astro";
import Renderer from "./Renderer.astro";

interface Props {
  entry: CollectionEntry<"docs">;
}

const { entry } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>reveal.js - Barebones</title>
  </head>
  <body>
    <div class="reveal">
      <div class="slides">
        <PresentationModeRenderer>
          <Renderer {entry} />
        </PresentationModeRenderer>
      </div>
    </div>

    <script>
      import Reveal from "reveal.js/dist/reveal.js";
      import RevealSpeakerNotes from "reveal.js/plugin/notes/notes.js";
      Reveal.initialize({
        hash: true,
        history: true,
        plugins: [RevealSpeakerNotes],
      });
    </script>
  </body>
</html>
